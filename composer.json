{
    "name": "lmr/duo_auth",
    "type": "roundcube-plugin",
    "description": "Duo Security Universal Prompt two-factor authentication for Roundcube. Supports multiple authentication methods including push notifications, SMS, phone calls, and hardware tokens.",
    "homepage": "https://github.com/leonardomarino/duo_auth",
    "keywords": [
        "two-factor",
        "2fa",
        "authentication",
        "duo",
        "duo-security",
        "duo-universal-prompt",
        "roundcube",
        "roundcube-plugin",
        "mfa",
        "multi-factor-authentication",
        "security",
        "oauth2",
        "oidc"
    ],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Leonardo Mariño-Ramírez",
            "email": "leonardo@marino-johnson.org",
            "homepage": "https://github.com/leonardomarino",
            "role": "Lead Developer"
        },
        {
            "name": "Pavlo Lyha",
            "role": "Contributor (Duo Web v4 SDK support)"
        },
        {
            "name": "Johnson Chow",
            "role": "Contributor (IPv4 CIDR matching and user overrides)"
        },
        {
            "name": "Alexios Polychronopoulos",
            "role": "Original Author"
        }
    ],
    "support": {
        "issues": "https://github.com/leonardomarino/duo_auth/issues",
        "source": "https://github.com/leonardomarino/duo_auth",
        "docs": "https://github.com/leonardomarino/duo_auth/wiki"
    },
    "require": {
        "php": ">=7.4 || ^8.0",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-filter": "*",
        "roundcube/plugin-installer": "^0.3 || ^0.4",
        "duosecurity/duo_universal_php": "^1.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0",
        "mockery/mockery": "^1.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.40"
    },
    "autoload-dev": {
        "psr-4": {
            "DuoAuth\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/php-cs-fixer fix",
        "stan": "vendor/bin/phpstan analyse",
        "check": ["@cs", "@stan", "@test"],
        "post-install-cmd": [
            "@php -r \"file_exists('config.inc.php') || copy('config.inc.php.dist', 'config.inc.php');\""
        ],
        "post-update-cmd": [
            "@php -r \"echo '\\n⚠️  Check config.inc.php.dist for new configuration options\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "roundcube/plugin-installer": true
        },
        "platform": {
            "php": "8.2.0"
        }
    },
    "extra": {
        "roundcube": {
            "min-version": "1.5.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
